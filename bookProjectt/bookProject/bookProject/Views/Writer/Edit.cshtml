@model ClassLibrary.Writer

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Writer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="writerID" class="form-control" type="hidden" />            
            <div class="form-group">
                <label asp-for="writerName" class="control-label"></label>
                <input asp-for="writerName" class="form-control" />
                <span asp-validation-for="writerName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Listeye Geri Dön</a>
            </div>
        </form>
    </div>
</div>



